    <script>
    $("#aggiorna_pw").prop("disabled",true);
    function checkPasswordMatch() {
        var password_1 = $("#password_1").val();
        var confirmPassword = $("#password_2").val();
        if (password_1 != confirmPassword){
            $("#CheckPasswordMatch").html("Passwords does not match!");
        	$("#aggiorna_pw").prop("disabled",true);
        	$("#password_2").addClass("bg-danger");
       	 	$("#password_1").removeClass("bg-success");
          	$("#password_2").removeClass("bg-success");
        } else {
            $("#CheckPasswordMatch").html("Passwords match.");
       	 	$("#password_2").removeClass("bg-danger");
       	 	$("#password_1").addClass("bg-success");
       	 	$("#password_2").addClass("bg-success");
       	 	$("#aggiorna_pw").prop("disabled",false);
        }
    }
    $(document).ready(function () {
       $("#password_2").keyup(checkPasswordMatch);
    });
